extends layout

block content
  h1= title
  - let horses=results
  div(class="container-fluid")
  div(class="row")
    each horse,index in horses
      div(class="col-sm-2 " onclick=`buy(${index})`) #{horse.Name} - #{horse.Cost} - #{horse.Weight} 
  script.
      function buy(itemNo)
      {
        alert(`You purchased Item ${itemNo+1}`)
      }     
    